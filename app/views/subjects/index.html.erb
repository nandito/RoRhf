<section id="left">
<article>
<h3>Tantárgyak</h3>

<table>
  <tr>
    <th>Név</th>
    <th>Tárgykód</th>
    <th>Kredit</th>
    <th></th>
    <th></th>
  </tr>

<% @subjects.each do |subject| %>
  <tr>
    <td class="first-col"><%= link_to subject.name, subject, :class => "subject-name" %></td>
    <td class="code-col"><%= subject.code %></td>
    <td class="credit-col"><%= subject.credit %></td>
    <td><% if @user = current_user %><%= link_to image_tag("/assets/edit.png"), edit_subject_path(subject), :class => "edit-img" %><% end %></td>
    <td><% if @user = current_user %><%= link_to image_tag("/assets/delete.png"), subject, :confirm => 'Biztos vagy benne?', :method => :delete, :class => "delete-img" %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<% if @user = current_user %><%= link_to 'Új tárgy hozzáadása', new_subject_path , :class => "add-new-subject" %><% end %>
</article>
</section>
